{
	"extends": ["@d-zero/markuplint-config/base"],
	"parser": {
		"\\.astro$": "@markuplint/astro-parser",
		"\\.svelte$": "@markuplint/svelte-parser"
	},
	"specs": {
		"\\.svelte$": "@markuplint/svelte-spec"
	},
	"rules": {
		"character-reference": false
	},
	"nodeRules": [
		{
			"selector": "h1",
			"rules": {
				"require-accessible-name": false
			}
		}
	]
}
